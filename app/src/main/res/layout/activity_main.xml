<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:layout_width="match_parent"
        android:id="@+id/calendarView1"
        android:layout_height="match_parent"
        app:mcv_showOtherDates="other_months">
    </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintEnd_toEndOf="@+id/calendarView1"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"/>

    <View
        android:id="@+id/green_shape"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/oval_shape"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintStart_toStartOf="@+id/calendarView1"
         android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:id="@+id/values_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintStart_toStartOf="@+id/green_shape"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="38dp"/>
    <View
        android:id="@+id/yellow_shape"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/yellow_oval"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintStart_toEndOf="@+id/green_shape"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:id="@+id/values_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintStart_toStartOf="@+id/yellow_shape"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="38dp"/>
    <View
        android:id="@+id/red_shape"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/red_oval"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintStart_toEndOf="@+id/yellow_shape"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:id="@+id/values_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView1"
        app:layout_constraintStart_toStartOf="@+id/red_shape"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="38dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>